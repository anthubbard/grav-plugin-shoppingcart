{% extends 'partials/shoppingcart_core_base.html.twig' %}

{% block content %}

    {% if uri.param('token') == order_token %}

        <h1>{{ "PLUGIN_SHOPPINGCART.THANKS_FOR_YOUR_ORDER"|t }}</h1>

        <h3>{{ "PLUGIN_SHOPPINGCART.PRODUCTS_BOUGHT"|t }}</h3>

        {% for product_ordered in order_products %}
            <li>
                {{ product_ordered.quantity }} {{ product_ordered.product.title }} at {{ product_ordered.product.price}} each
            </li>
        {% endfor %}


        <h3>{{ "PLUGIN_SHOPPINGCART.TOTAL_PAID"|t }}</h3>

        {{ order_amount }} {{ currency }}

        <h3>{{ "PLUGIN_SHOPPINGCART.ORDER_DETAILS"|t }}</h3>

        {{ order_address.firstname }} {{ order_address.lastname }}<br>
        {{ order_address.address1 }}<br>
        {{ order_address.address2 }}<br>
        {{ order_address.zip }} {{ order_address.city }}<br>
        {{ order_address.country }}<br>
        {{ order_address.email }} {{ order_address.telephone }}<br>

    {% endif %}

{% endblock %}
