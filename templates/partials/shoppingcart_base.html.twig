{% extends 'partials/base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% do assets.addJs('plugin://shoppingcart/js/lib/store.min.js') %}
    {% do assets.addJs('plugin://shoppingcart/js/shoppingcart.js') %}
    {% do assets.addJs('plugin://shoppingcart/js/shoppingcart_lib.js') %}
    {% do assets.addJs('plugin://shoppingcart/js/shoppingcart_cart.js') %}
    {% do assets.addJs('plugin://shoppingcart/js/shoppingcart_cart_events.js') %}
    {% do assets.addJs('plugin://shoppingcart/gateways/stripe/script.js') %}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' ignore missing %}
    {% endif %}
{% endblock %}
